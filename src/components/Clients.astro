---
const clients = [
    { title: "Salanobity", name: "Sami Didot", role: "Manager", quote: "Trusted partners for cool furnishing loops and rooms..." },
    { title: "Dones", name: "Kevin Rehman", role: "CEO", quote: "The full-service interior customer side has never been better..." },
    { title: "Microsoft", name: "Stefanie Witcher", role: "Client", quote: "Thank you to a too greener validly dose and suit case..." },
];
---
<section class="py-24 bg-white relative">
    <div class="container mx-auto px-6 text-center">
        <!-- Decoration leaves (using simple CSS shapes or emojis for now) -->
        <!-- Left Side Decorations -->
        <div class="absolute top-1/2 -translate-y-1/2 left-0 w-32 md:w-48 h-64 z-0 pointer-events-none hidden md:block">
            <!-- Dark Green Leaf - Left -->
            <svg viewBox="0 0 100 100" class="absolute left-[-20%] top-[-20%] w-full h-full text-secondary fill-current opacity-90 transform -rotate-12">
                <path d="M0,50 Q20,0 50,20 T100,50 Q80,100 50,80 T0,50 Z" />
            </svg>
            <!-- Light Green Blob - Left -->
            <div class="absolute top-[40%] left-[-10%] w-20 h-20 bg-light-green rounded-full opacity-60"></div>
        </div>

        <!-- Right Side Decorations -->
        <div class="absolute bottom-0 right-0 w-40 md:w-56 h-auto z-0 pointer-events-none hidden md:block">
             <!-- Dark Blob - Right -->
            <div class="absolute bottom-10 right-[-20%] w-32 h-32 bg-secondary rounded-full opacity-90"></div>
            <!-- Light Green Floating Shape - Right -->
            <svg viewBox="0 0 100 100" class="absolute bottom-20 right-[20%] w-24 h-24 text-light-green fill-current opacity-80">
                 <circle cx="50" cy="50" r="40" />
            </svg>
            <!-- Smaller Green Dot -->
             <div class="absolute bottom-[40%] right-[60%] w-8 h-8 bg-emerald-400 rounded-full opacity-80"></div>
        </div>

        <h2 class="text-3xl md:text-4xl font-bold font-heading mb-16 text-dark tracking-tight max-w-2xl mx-auto">
            Why Our Clients in Dallas-Fort Worth <br/> Love Working With Us
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {clients.map(client => (
                <div class="p-10 border border-gray-100 rounded-3xl hover:shadow-xl hover:border-emerald-100 transition-all duration-300 group bg-white">
                    <div class="h-10 mb-8 flex items-center justify-center opacity-60 group-hover:opacity-100 transition-opacity">
                        <!-- Placeholder for Logo -->
                         <h3 class="text-2xl font-bold font-heading text-gray-400 group-hover:text-primary transition-colors">{client.title}</h3>
                    </div>
                    <p class="text-sm text-gray-500 italic mb-8 leading-relaxed">
                        "{client.quote}"
                    </p>
                    <div class="text-center">
                        <p class="text-sm font-bold text-dark">
                            {client.name}
                        </p>
                        <p class="text-xs text-secondary font-medium">
                            {client.role}
                        </p>
                    </div>
                </div>
            ))}
        </div>
        
         <!-- Carousel indicators placeholders -->
         <div class="flex justify-center gap-3 mt-12">
             <button class="w-3 h-3 rounded-full bg-primary cursor-pointer hover:bg-primary/80 transition-colors" aria-label="Slide 1"></button>
             <button class="w-3 h-3 rounded-full bg-gray-200 cursor-pointer hover:bg-gray-300 transition-colors" aria-label="Slide 2"></button>
             <button class="w-3 h-3 rounded-full bg-gray-200 cursor-pointer hover:bg-gray-300 transition-colors" aria-label="Slide 3"></button>
         </div>
    </div>
</section>
