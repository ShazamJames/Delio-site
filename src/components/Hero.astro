<section class="bg-primary text-white relative overflow-hidden pb-32 pt-16 md:min-h-[700px] flex items-center">
    <!-- Background element/curve logic if needed -->
    <div class="container mx-auto px-6 grid md:grid-cols-2 gap-12 items-center relative z-10">
        <div>
            <span class="inline-block px-4 py-1.5 rounded-full bg-secondary/50 text-xs font-semibold tracking-wide mb-6">Micro Market</span>
            <h1 class="text-4xl md:text-6xl font-bold font-heading leading-tight mb-6">
                Delight in Every <span class="text-emerald-300">Bite</span>
            </h1>
            <p class="text-emerald-100 text-lg mb-8 max-w-md section-desc">
                Reimagine Your Break Room | Dallas | Fort Worth
            </p>
            <div class="flex gap-4">
                 <button class="bg-accent hover:bg-orange-600 text-white font-bold py-3.5 px-8 rounded-full transition-all shadow-lg hover:shadow-orange-200 transform hover:-translate-y-1">
                    Transform Your Office
                </button>
            </div>
        </div>
        <div class="relative">
            <!-- Image placeholder - Using a generic office breakroom image -->
            <div class="rounded-3xl overflow-hidden shadow-2xl border-4 border-white/10 relative z-10">
                <img src="https://images.unsplash.com/photo-1577412647305-991150c7d163?ixlib=rb-1.2.1&auto=format&fit=crop&w=1200&q=80" alt="Modern Breakroom" class="w-full h-auto object-cover" />
            </div>
            <!-- Floating element example -->
            <div class="absolute -bottom-6 -left-6 bg-white text-dark p-4 rounded-xl shadow-xl hidden md:block z-20">
                 <p class="font-bold text-sm">Fresh Food</p>
                 <p class="text-xs text-gray-500">Available Daily</p>
            </div>
             <!-- Decorative blob behind image -->
             <div class="absolute -top-10 -right-10 w-40 h-40 bg-secondary/50 rounded-full blur-2xl -z-10"></div>
        </div>
    </div>
    
    <!-- Curve Decoration bottom -->
    <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-none">
        <svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none" class="relative block w-[calc(137%+1.3px)] h-[80px] fill-white">
